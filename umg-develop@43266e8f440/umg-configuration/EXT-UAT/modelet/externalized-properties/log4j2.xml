
<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN"
	packages="com.ca.framework.core.logging.appender">
	<Appenders>
		<RollingRandomAccessFile name="rollingRandomAccessFile"
			fileName="/usr/local/umg-logs/${sys:logroot}/umg.log"
			filePattern="/usr/local/umg-logs/${sys:logroot}/umg-%d{MM-dd-yyyy}-%i.log.gz">
			<PatternLayout>
				<Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="50 MB" />
			</Policies>
		</RollingRandomAccessFile>
		<TenantAwareAsync name="FileAsync">
			<AppenderRef ref="rollingRandomAccessFile" />
		</TenantAwareAsync>
	</Appenders>
	<Loggers>
		<Logger name="org.jgroups" level="error" additivity="false">
			<AppenderRef ref="rollingRandomAccessFile" />
		</Logger>
		<Root level="${sys:loglevel}">
			<AppenderRef ref="rollingRandomAccessFile" />
		</Root>
	</Loggers>
</Configuration>
